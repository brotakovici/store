doctype html
html(lang="en")
  head 
    title Edit 
    link(rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css") 
    link(rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css") 
    style body {padding-top:80px; }

  body
    .container
      .jumbotron.text-center
        h1
          - var name = user.name ? user.name : " ";
          - var email = user.local.email ? user.local.email : " ";
          - var phone = user.phone ? user.phone : " ";
          - var address = user.address ? user.address : " ";
          - var city = user.city ? user.city : " ";
          - var county = user.county ? user.county : " ";
          - var postcode = user.postcode ? user.postcode : " ";
          input(type='hidden' value="#{user._id}")#id
          div Name
          input(type="text" value="#{name}")#name
          div Email
          input(type="text" value=" #{email}")#email
          div Phone
          input(type="text" value="#{phone}")#phone
          div Address
          input(type="text" value="#{address}")#address
          div City
          input(type="text" value="#{city}")#city
          div County
          input(type="text" value="#{county}")#county
          div Postcode
          input(type="text" value="#{postcode}")#postcode
         .row 
           .col-xs-6
             .btn.btn-default#save-button Save changes
           .col-xs-6
             .btn.btn-default#cancel-button Cancel

block scripts 
  include default-scripts
  script(src="/js/edit.js")
