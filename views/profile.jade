doctype html
html
read
  title Profile
  link(rel='stylesheet' href='//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css')
  link(rel='stylesheet' href='//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css')
  style body {padding-top:80px; word-wrap:break-word;}

body
  .container
    .page-header.text-center
      h1
        span.fa.fa-anchor Profile page
      a(href='/logout').btn.btn-default.btn-sm Logout

    .row
      .col-sm-6
        .well
          h3
            span.fa.fa-user Local
            p 
              strong Email: #{user.local.email}
              br
              strong Password: #{user.local.password}
              br
              strong Phone:  #{user.phone}
              
              br
              strong Address: #{user.address}, #{user.city}, #{user.county}, #{user.postcode}
        a(href='/edit').btn.btn-default.btn-sm Edit

block scripts
  include ../
